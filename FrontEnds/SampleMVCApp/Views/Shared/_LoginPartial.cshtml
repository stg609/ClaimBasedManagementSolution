@using Microsoft.AspNetCore.Identity
@using SampleMVCApp.Services

@if (!User.Identity.IsAuthenticated)
{
    <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@Context.Request.Path" method="post" id="loginForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Login</button>
            </li>
        </ul>
    </form>
}
else
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a href="http://localhost:5000/Manage/Index"> Hello @User.GetNickname()!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>
            </li>
        </ul>
    </form>
}
