@model IEnumerable<MenuViewModel>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@


<ul class="nav navbar-nav">
    @foreach (var menu in Model)
    {
        bool hasChildren = menu.Children != null && menu.Children.Any();
        <li class="@(hasChildren?"dropdown":"")">
            @if (!hasChildren)
            {
                <a href="@menu.Url">@menu.Name</a>
            }
            else
            {
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@menu.Name<span class="caret"></span></a>
                <ul class="dropdown-menu">
                    @foreach (var submenu in menu.Children)
                    {
                        <li><a href="@submenu.Url">@submenu.Name</a></li>
                    }
                </ul>
            }
        </li>
    }
</ul>