@model IEnumerable<ClaimViewModel>
@{
    ViewData["Title"] = "Index";
}

<h2>Claims</h2>

<div class="btn-toolbar" role="toolbar" aria-label="Claim Manager toolbar">
    <div class="btn-group" role="group" aria-label="Claim Manager tools">
        <button type="button" class="btn btn-default">Sync</button>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Key</th>
            <th scope="col">Value</th>
            <th scope="col">Owner Identity</th>
            <th scope="col">Owner IP</th>
        </tr>
    </thead>
    <tbody>
        @foreach (ClaimViewModel claim in Model)
        {
            <tr>
                <th>
                    @claim.Key
                </th>
                <th>
                    @claim.Value
                </th>
                <td>
                    @claim.OwnerIdentity
                </td>
                <td>
                    @claim.OwnerIp
                </td>                
            </tr>
        }
    </tbody>
</table>

