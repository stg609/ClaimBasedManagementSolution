@model CreateRoleViewModel

<div class="form-group">
    <label asp-for="Name"></label>
    <input asp-for="Name" class="form-control" autofocus />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Claims"></label>
    <div class="input-group">
        @for (int i = 0; i < Model.Claims?.Count; i++)
        {
            <input type="checkbox" asp-for="@Model.Claims[i].Checked" />
            <input type="hidden" asp-for="@Model.Claims[i].Text" />
            <input type="hidden" asp-for="@Model.Claims[i].Value" />
            <label asp-for="@Model.Claims[i].Checked" class="mr10" >@Model.Claims[i].Text</label>
        }
    </div>
</div>